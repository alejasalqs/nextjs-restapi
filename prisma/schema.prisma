generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Definir los modelos de db
// Cada vez que se hace un cambio a la db se corre una migracion

model Todo {
  id String @id @default(uuid()) // llave unica
  description String
  complete Boolean @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
